<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div>メールアドレス　：<%= f.email_field :email%></div>
    <div>パスワード　　　：<%= f.password_field :password, autocomplete: "off" %></div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> パスワードを記憶しますか？</div>
    <% end -%>

    <div><%= f.submit "ログイン" %></div>
<% end %>

