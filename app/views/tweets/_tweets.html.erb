<% @tweets.reverse_order.each do |tweet| %>
      <% if tweet.user.icon.present? %>
          <%= image_tag tweet.user.icon, width: 40, height: 40, :class => "img-rounded" %>
      <% else %>
          <%= image_tag 'http://ks.c.yimg.jp/res/chie-0/309/267/i1/img.PNG', width: 40, height: 40 , :class => "img-rounded"%>
      <% end %>

      <%= tweet.user.name %>
      @<%= tweet.user.account %>
      <br/>
      <%= tweet.content %>
      <br/>
      <%= tweet.created_at.in_time_zone("Asia/Tokyo").strftime("%Y/%m/%d %H:%M:%S") %>
      <% if signed_in? && current_user == tweet.user %>
          <%= link_to (image_tag "dustbox.png", width: 20, height: 20), tweet, method: :delete, data: {confirm: 'ツイートを削除します。'} %>
      <% end %>
      <br/><br/>
<% end %>